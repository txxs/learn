<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hui.readwrite.mapper.master2.CountMapper">

    <resultMap id="CountMap" type="com.hui.readwrite.po.Count">
        <result column="id" property="id"/>
        <result column="num" property="num"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="getCountList" resultMap="CountMap">
        select
        id,
        num,
        name
        from
        count
    </select>

    <update id="updateOneCount" parameterType="java.lang.Integer">
        UPDATE count set num = #{11111} where id = #{0}
    </update>

</mapper>